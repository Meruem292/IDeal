rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Helper functions to check user roles
    function isSignedIn() {
      return request.auth != null;
    }

    function isStudent(userId) {
      return exists(/databases/$(database)/documents/students/$(userId));
    }

    function isFaculty(userId) {
      return exists(/databases/$(database)/documents/faculty/$(userId));
    }

    function isAdmin(userId) {
      return exists(/databases/$(database)/documents/admins/$(userId));
    }

    // Students can be created by anyone (registration), 
    // but only the student themselves or an admin can read/update.
    // Only admins can delete student records.
    match /students/{studentId} {
      allow create: if (request.auth.uid == studentId);
      allow read, update: if (isSignedIn() && (request.auth.uid == studentId || isAdmin(request.auth.uid)));
      allow delete: if (isSignedIn() && isAdmin(request.auth.uid));
    }

    // Admins can create/delete faculty.
    // Faculty can read their own data.
    // Admins can read/update all faculty data.
    match /faculty/{facultyId} {
      allow create, delete: if (isSignedIn() && isAdmin(request.auth.uid));
      allow read: if (isSignedIn() && (request.auth.uid == facultyId || isAdmin(request.auth.uid)));
      allow update: if (isSignedIn() && isAdmin(request.auth.uid));
    }

    // Only admins can read/write to the admins collection
    match /admins/{adminId} {
      allow read, write: if (isSignedIn() && isAdmin(request.auth.uid));
    }

    // Admins can read/write sections and their subcollections (schedules).
    // Faculty can read section and schedule information.
    match /sections/{sectionId} {
      allow read: if (isSignedIn() && (isAdmin(request.auth.uid) || isFaculty(request.auth.uid)));
      allow write: if (isSignedIn() && isAdmin(request.auth.uid));

      match /schedules/{scheduleId} {
        allow read: if (isSignedIn() && (isAdmin(request.auth.uid) || isFaculty(request.auth.uid)));
        allow write: if (isSignedIn() && isAdmin(request.auth.uid));
      }
    }
    
    // Students can read their own scan history based on their RFID.
    // Admins can read all scan history.
    // This collection is write-only from the external RFID scanner, so we don't allow writes from the app.
    match /rfid_history/{docId} {
       allow read: if (isSignedIn() && 
                    (isAdmin(request.auth.uid) || 
                     (isStudent(request.auth.uid) && resource.data.uid == get(/databases/$(database)/documents/students/$(request.auth.uid)).data.rfid)));
      allow write: if false; // Data is written by a backend/physical scanner, not users.
    }
  }
}
