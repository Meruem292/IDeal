rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if a user is an admin
    function isAdmin() {
      return exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }

    // Students can create their own profile upon registration
    // They can only read and write their own data
    match /students/{studentId} {
      allow create: if request.auth != null && request.auth.uid == studentId;
      allow read, write: if request.auth != null && request.auth.uid == studentId;
      // Admins can read student data
      allow list, get: if request.auth != null && isAdmin();
    }

    // Faculty can only be created by an Admin
    // They can only read and write their own data
    match /faculty/{facultyId} {
      allow create: if request.auth != null && isAdmin();
      allow read, write: if request.auth != null && (request.auth.uid == facultyId || isAdmin());
      // Admins can list faculty data
      allow list: if request.auth != null && isAdmin();
    }
    
    // Admins can read and write their own doc
    match /admins/{adminId} {
      allow read, write: if request.auth != null && request.auth.uid == adminId;
    }
  }
}
