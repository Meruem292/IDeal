rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Students can only be created during registration.
    match /students/{userId} {
      allow create: if request.auth != null;
      allow read, write: if request.auth.uid == userId;
    }

    // Admins can read all student and faculty data.
    match /students/{studentId} {
      allow read: if get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.role == 'admin';
    }
    match /faculty/{facultyId} {
       allow read: if get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.role == 'admin';
    }

    // Admins can be read by anyone (for rule checks) but only written by themselves.
    match /admins/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth.uid == userId;
    }

    // TEMPORARY RULE: Allow any authenticated user to create faculty.
    // This removes the admin check to unblock creation.
    match /faculty/{userId} {
      allow create: if request.auth != null;
      allow read, write: if request.auth.uid == userId;
    }
  }
}
