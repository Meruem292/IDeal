rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is an admin
    function isAdmin() {
      return exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }

    // Students can register (create their own document). Admins can do anything.
    match /students/{userId} {
      allow create: if request.auth.uid == userId || isAdmin();
      allow read, update, delete: if request.auth.uid == userId || isAdmin();
    }

    // Admins are managed here.
    match /admins/{userId} {
        // A user can create their own admin document (to bootstrap the first admin)
        allow create: if request.auth.uid == userId;
        // Only other admins can manage admins.
        allow read, update, delete: if isAdmin();
    }

    // Faculty can be managed by admins. They can manage their own document.
    match /faculty/{userId} {
      allow create: if isAdmin();
      allow read, update, delete: if request.auth.uid == userId || isAdmin();
    }
  }
}
